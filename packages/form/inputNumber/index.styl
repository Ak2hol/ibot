@import '../../../constants'


.number-input
  position relative
  display flex
  align-items center
  height 22px
  &.disabled
    input
      opacity: .5

  &:hover
    input
      border-bottom 1px solid $cl-secondary-text
    .buttons
      visibility visible

  > input
    width 100%
    height 100%
    padding-right 20px
    text-indent 4px
    font-size 12px

    &:focus,
    .buttons
      visibility: visible
  > .input
    border 0
    outline 0
    background transparent
    color $cl-secondary-text
    border-bottom 1px solid $cl-divider

    &:focus
      border-bottom 1px solid $cl-core


  > .buttons
    visibility hidden
    position absolute
    width 20px
    top 0
    right 0
    bottom 5px
    display flex
    flex-direction column
    span
      display flex
      flex 1
      justify-content center
      align-items center
      color $cl-btn-active
      &:active
        color $cl-core
