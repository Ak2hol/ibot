$InputNumber-font-size = 12px
$InputNumber-action-width = 1.5em
$InputNumber-regular-action-width = 2em

label.InputNumber
  &
    position relative
    display inline-block
    min-width 2em
    overflow hidden
    // Canâ€™t use San Francisco for suffix position reason:
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-size $InputNumber-font-size
  &.is-active input
    background-color $cl-input-hover-bg
    border-color $cl-input-hover-border
    box-shadow $cl-input-active-shadow
  &.isnt-valid input
    border-color $cl-input-invalid-border !important
    box-shadow $cl-input-invalid-shadow !important
  &.is-disabled
    cursor not-allowed
  &.is-disabled
  &.is-readonly
    &:after
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%

  input
    padding 0 $InputNumber-action-width 0 .5em

  &:not(.is-disabled):hover input:not([readonly])
  input:not([readonly]):focus
    & ~ .action
      opacity 1
      transition all .2s ease-out

  &.with-prefix input
    padding-left 1.25em
  &.with-suffix input
    padding-right 32px

  .action
    &
      position absolute
      top 0
      right 0
      width $InputNumber-action-width
      height 100%
      text-align center
      opacity 0
    button
    button:hover
      display block
      margin 0
      padding 0
      width 100%
      height 50%
      line-height 0
      color $cl-InputNumber-action
    button:active
      color $cl-InputNumber-action-active
    button svg
      height 4px
      fill currentColor
    button:first-child
      padding 5px 0 2px
    button:last-child
      &
        padding 2px 0 5px
      svg
        transform rotate(180deg)
  &.regular .action
    top 50%
    transform translateY(-50%)
    width $InputNumber-regular-action-width
    height 28px

  .prefix
  .suffix
    position absolute
    top 0
    left 0
    display flex
    display none
    align-items center
    height 100%
    pointer-events none
    user-select none
  .prefix
    min-width 1.5em
    padding-right .25em
    justify-content flex-end
  .suffix
    &
      margin 0 32px 0 .8333em
      width 100%
    &:before
      content attr(data-value)
      display inline-block
      padding-right .25em
      width -moz-fit-content
      width fit-content
      max-width calc(100% - 32px)
      overflow hidden
      opacity 0
  /.InputNumber.with-prefix .suffix
    margin 0 26px 0 1.333em
