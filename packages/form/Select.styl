@import '../../constants'

label.Select
  $padding-left = .5em

  &
    display inline-flex
    justify-content space-between
    align-items center
    padding-left $padding-left
    max-width 100%
    height $select-height
    background-color $cl-input-bg
    border 1px solid $cl-input-border
    border-radius 2px
    color inherit
    cursor pointer
    transition all .2s ease-out
  button
    flex 1
    width calc(100% - 2em)
    height 100%
    text-align start
    color $cl-secondary-text
    cursor inherit
  .caret
    &
      margin 0 .75em 0 1em
      color $cl-tertiary-grey
    svg
      display block
      fill currentColor
      transform rotate(180deg)
      transition all .3s ease-out

  &.small
    &
      height $select-small-height
      font-size 12px
    .caret
      margin-right .5em

  &:not(.is-disabled):hover
  &.is-open
    border-color $cl-active
  &.is-open
    &
      background-color #fff
      box-shadow $cl-input-active-shadow
    .caret svg
      transform rotate(0deg)
  &.is-disabled
    opacity .6
    cursor not-allowed

ul.SelectMenu
  &
    position fixed
    z-index $z-SelectMenu
    margin 2px 0 0
    padding 0
    display block
    max-width 20em
    min-height $select-option-height
    max-height (10 * $select-option-height)
    overflow-x hidden
    overflow-y auto
    font-size 12px
    list-style none
    background-color #fff
    border-radius 3px
    box-shadow 0 2px 10px 0 rgba(39,54,78,0.08), 4px 12px 40px 0 rgba(39,54,78,0.10)
    color $cl-secondary-text
    transition .2s ease-in-out
    transition-property transform, opacity
  &::-webkit-scrollbar
    display block
    width 2px
    height 2px
  &::-webkit-scrollbar-thumb
    background-color #ccc
    border-radius 1px
  &::-webkit-scrollbar-track
    background-color rgba(#fff, .5)
  &.is-empty
    min-height $select-option-height
  &:not(.is-open)
    pointer-events none
    opacity 0
    transform-origin 50% 0
    transform scale(.8)
  &.is-open
    opacity 1
    transform none

  li.SelectGroup
    > .title
      display flex
      align-items center
      padding 0 .75em
      height $select-option-height
      font-weight bold
    > ul
      margin 0
      padding 0
    > ul > li
      padding-left 1.25em

  li.SelectOption
    &
      display flex
      align-items center
      padding 0 .75em
      height $select-option-height
      cursor pointer
    &:not(.empty-msg):hover
    &.is-active
      background-color rgba(#000, .04)
    &.empty-msg
      color $cl-tertiary-text
      cursor not-allowed
