/* Style reset */
html
  box-sizing border-box
  margin 0
  padding 0
  font-family -apple-system, sans-serif
  font-size 16px
  line-height 1.2
*
*:before
*:after
  box-sizing inherit
body
  font-size .875rem
button
  padding 0
  font-family inherit
  font-size inherit
  background none
  border 0
  outline 0
  color inherit
  cursor pointer
input
  background none
  border 0
  outline 0

h2
h3
h4
h5
h6
  & + p
  & + form
  & + ul
  & + ol
    margin-top -.75em
h2 + h3
  margin-top -.75em
