@import '../util/index'

/* Style reset */
html
  box-sizing border-box
  margin 0
  padding 0
  font-family -apple-system, sans-serif
  font-size 16px
  line-height 1.2
*
*:before
*:after
  box-sizing inherit
body
  &
    font-size .875rem
  &.ibot-cant-scroll
    overflow hidden !important

a:link
a:visited
  text-decoration none
  color $cl-link
  transition all .15s ease-out
a:not([disabled]):hover
  color $cl-link-hover
a:not([disabled]):active
  color $cl-link-active

button
  padding 0
  font-family inherit
  font-size inherit
  background none
  border 0
  outline 0
  color inherit
  cursor pointer
input
  line-height normal
  background none
  border 0
  outline 0

.iBotRoot
  h2
  h3
  h4
  h5
  h6
    & + p
    & + form
    & + ul
    & + ol
      margin-top -.75em
  h2 + h3
    margin-top -.75em
