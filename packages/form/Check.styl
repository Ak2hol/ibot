$label-disabled
  &:after
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba(#fff, .5)
    cursor not-allowed

label.check-label
label.radio-label
  &
    position relative
    display flex
    line-height $label-line-height
    cursor pointer
  &.is-disabled
    @extends $label-disabled
  > input[type=radio]
  > input[type=checkbox]
    position absolute
    opacity 0
  .checker
    &
      position relative
      flex 0 0 1em
      display block
      margin-right .25em
      width 1em
      height ($label-line-height)em
    &:before
      content ''
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      display inline-block
      margin-top -.05em
      width .9em
      height @width
      background-color #fff
      border 1px solid $cl-core
      color $cl-core
      transition all .2s ease-in-out

label.radio-label
  .checker:before
    border-radius 50%
  input:checked + .checker:before
    padding 1px
    background-color $cl-core
    background-clip content-box
    border-color $cl-core

label.check-label
  input:checked + .checker:before
    content 'check'
    width 1em
    height 1em
    font normal normal normal 1em/1 Material Icons
    font-size .9em
    line-height .75
    text-indent -.05em
    -webkit-font-smoothing antialiased
    text-rendering optimizeLegibility
    font-feature-settings "liga"

.radio-group
.check-group
  &
    position relative
    display flex
    flex-wrap wrap
  &.is-disabled
    @extends $label-disabled
  label
    margin-right .5em
    min-height 2em
