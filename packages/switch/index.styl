@import '~@ibot/util/index'

label.Switch
  $size = 26px

  &
    position relative
    display inline-block
    margin 0 .125em
    width $size * 2
    height $size
    vertical-align s('calc((1em - %s)/2)', $size)
    background-color $cl-quaternary-grey
    border-radius ($size/2)
    cursor pointer
    transition all 0.2s
  > button
    position absolute
    top 0
    left 0
    display flex
    justify-content center
    align-items center
    margin 1px
    width $size - 2px
    height @width
    font-size 14px
    border-radius 50%
    background-color white
    box-shadow 0 1px 2px 0 rgba(#000,.1)
    transition all 0.3s
  .icon
    color $cl-core
  &.is-checked
    &
      background-color $cl-core
    > button
      left s('calc(100% - %s)', $size)
  &.is-disabled
    &
      opacity .5
      cursor not-allowed
    & button
      cursor not-allowed
