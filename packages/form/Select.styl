@import '../../constants'

label.Select
  &
    display inline-flex
    justify-content space-between
    align-items center
    max-width 100%
    height $select-height
    border-bottom 1px solid $cl-divider
    cursor pointer
    transition all .2s
  button
    flex 1
    height 100%
    text-align start
    color $cl-secondary-text
    cursor inherit
  .icon.Select-caret
    margin 0 .5em 0 1em
    color $cl-tertiary-text
    transition all .3s ease-out
  &:not(.is-disabled):hover
  &.is-open
    border-color $cl-core
  &.is-open .icon.Select-caret
    transform rotate(180deg)
  &.is-disabled
    opacity .6
    cursor not-allowed

ul.SelectMenu
  &
    position fixed
    margin 0
    padding 0
    display block
    min-height $select-option-height
    max-height (10 * $select-option-height)
    overflow-x hidden
    overflow-y auto
    font-size 12px
    list-style none
    background-color #fff
    box-shadow 0 2px 8px 0 rgba(#000,.1)
    color $cl-secondary-text
    transition .2s ease-in-out
    transition-property transform, opacity
  &::-webkit-scrollbar
    display block
    width 2px
    height 2px
  &::-webkit-scrollbar-thumb
    background-color #ccc
    border-radius 1px
  &::-webkit-scrollbar-track
    background-color rgba(#fff, .5)
  &.is-empty
    min-height $select-option-height
  &:not(.is-open)
    pointer-events none
    opacity 0
    transform-origin 50% 0
    transform scale(.8)
  &.is-open
    opacity 1
    transform none

  li.SelectGroup
    > .title
      display flex
      align-items center
      padding 0 .75em
      height $select-option-height
      font-weight bold
    > ul
      margin 0
      padding 0
    > ul > li
      padding-left 1.25em

  li.SelectOption
    &
      display flex
      align-items center
      padding 0 .75em
      height $select-option-height
      cursor pointer
    &:not(.empty-msg):hover
    &.is-active
      background-color rgba(#000, .04)
    &.empty-msg
      color $cl-tertiary-text
      cursor not-allowed
