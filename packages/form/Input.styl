$Input
  &
    display inline-block
    color $cl-input-text
  input
  textarea
    &
      font-size inherit
      background-color $cl-input-bg
      border 1px solid $cl-input-border
      border-radius 2px
      color inherit
      transition all .2s ease-out
    &::selection
      background-color rgba($cl-warning, .3)
    &::-moz-selection
      background-color rgba($cl-warning, .3)
    &:not([disabled]):not([readonly]):focus
      background-color $cl-input-hover-bg
      border-color $cl-input-hover-border
      box-shadow $cl-input-active-shadow
    &[disabled]
      opacity .5
      cursor not-allowed
    &:focus
      outline 0
    &:invalid
      border-color $cl-input-invalid-border !important
      box-shadow $cl-input-invalid-shadow !important
    &::placeholder
      color $cl-input-placeholder-text
  &:hover
    input
    textarea
      &:not([disabled]):not([readonly])
        border-color $cl-input-hover-border

label.Input
  &
    @extends $Input
  &.regular
    height $Input-regular-height
  &.small
    height $Input-small-height
    font-size 12px
  input
    padding 0 .5em
    width 100%
    height 100%

label.Textarea
  &
    @extends $Input
  textarea
    &
      padding .5em
      width 100%
      min-height 5em
      max-height 10em
      resize vertical
    &[disabled]
    &[readonly]
      resize none
