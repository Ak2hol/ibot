.Check
  label&
    &
      position relative
      display inline-flex
      align-items baseline
      line-height $label-line-height
      cursor pointer
    &.is-disabled
      &
        cursor not-allowed
      &:after
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-color rgba(#fff, .5)

    // Visually-hide the actual input:
    > input[type=radio]
    > input[type=checkbox]
      position absolute
      opacity 0

  // Input state:
  & &State
    &
      position relative
      flex 0 0 1em
      margin-right .33333em
      width 1em
      height @width
      transform translateY(1px)
      font-size $checker-size
      border 1px solid $cl-core
      color $cl-core
      transition all .2s ease-in-out

label.Check .CheckState .Icon
  position absolute
  top -1px
  left -1px
  transition all .2s ease-in-out
label.Check input:not(:checked) + .CheckState .Icon
  speak none
  opacity 0
  transform translateY(50%)

.CheckGroup
  &
    position relative
    display flex
    flex-wrap wrap
  &.is-disabled
    @extends label.Check.is-disabled
  label
    margin-right .5em
    min-height 2em
