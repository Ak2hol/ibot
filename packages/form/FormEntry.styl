.FormEntry
  &
    display flex
    align-items center
    margin .5em 0
    min-height $form-entry-min-height

  > .key
    align-self flex-start
    display flex
    align-items center
    flex-basis $form-entry-key-width
    height $form-entry-min-height

  > .val
    flex 1
    margin-left auto
    max-width s('calc(100% - %s)', $form-entry-key-width)

  .required-sign
    margin 0 .25em
    color $cl-core

  > .val >
    .Input
      &
        display block
        width 100%
      &.small
        margin-top (($form-entry-min-height - $input-small-height)/2)
    .Textarea
      display block
      width 100%

    label.Check
    label.Radio
    .CheckGroup
    .RadioGroup
        margin-top s('calc((%s - %sem)/2)', $form-entry-min-height, $label-line-height)
