@import '../util'

.Dropdown
  &.is-disabled
    &
      opacity .5
    > button
      cursor not-allowed

.DropdownMenu
  &
    position fixed
    margin .25em 0
    min-width 8em
    font-size 12px
    pointer-events none
    opacity 0
    transition .2s ease-in-out
    transition-property transform, opacity
    transform-origin 50% 0
    transform scale(.9) translateX(calc(-100% + (14px*1.75)))
  &.arrowed
    margin .75em 0
  &.is-open
    pointer-events initial
    opacity 1
    transform translateX(calc(-100% + (14px*1.75)))

  .arrow
    position absolute
    top -.375em
    right .75em
    font-size 14px
    line-height 0
    color #fff
  svg
    width 1em
    height .375em
    fill currentColor
    fill-rule evenodd
    filter drop-shadow(0 -2px 1px rgba(39,54,78,.05))
  &.is-upward .arrow
    transform rotate(180deg)
    top initial
    bottom -.375em

  .content
    padding .75em .5em
    min-height 32px
    background-color #fff
    border-radius 4px
    box-shadow 0 2px 10px 0 rgba(39,54,78,.12), 4px 12px 40px 0 rgba(39,54,78,.12)

  ul.MenuList
    &
      margin 0
      padding 0
      list-style none
      text-align center
      color $cl-secondary-grey
    li
      &
        line-height 32px
        border-radius 2px
        cursor pointer
      &:not(.is-disabled):hover
        background-color $cl-lightest-grey
      &.is-active
        color $cl-active
      &.is-disabled
        cursor not-allowed
        opacity .5
