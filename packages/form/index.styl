@import '~@ibot/util/index'

$FormEntry-key-width = 7em
$FormEntry-min-height = 34px
$FormEntry-line-height = 1.5

$Checker-size = 12px
$Checker-line-height = $FormEntry-line-height

$Input-regular-height = $FormEntry-min-height
$Input-small-height = 22px

$InputNumber-font-size = 12px
$InputNumber-action-width = 1.5em
$InputNumber-regular-action-width = 2em

$Select-height = $FormEntry-min-height
$Select-small-height = 22px
$Select-option-height = 30px

// Palette:
$cl-Input-text = $cl-primary-grey
$cl-Input-placeholder-text = $cl-tertiary-grey
$cl-Input-bg = $cl-lightest-grey
$cl-Input-border = $cl-lighter-grey

$cl-Input-hover-border = $cl-active
$cl-Input-hover-bg = #fff
$cl-Input-active-shadow = 0 0 6px 0 rgba($cl-active, .5)

$cl-Input-invalid-border = $cl-error
$cl-Input-invalid-shadow = 0 0 6px 0 rgba($cl-error, .5)

$cl-Check-border = $cl-tertiary-grey
$cl-Check-bg = $cl-lightest-grey
$cl-Check-active-check = #fff
$cl-Check-active-check-bg = $cl-active

$cl-InputNumber-action = $cl-tertiary-grey
$cl-InputNumber-action-hover = $cl-secondary-grey
$cl-InputNumber-action-active = $cl-active
$cl-InputNumber-desc = $cl-tertiary-grey

@import './FormEntry'
@import './Input'
@import './InputNumber'
@import './Check'
@import './Radio'
@import './Select'
