@import '../util/index'

body.mb-cant-scroll
  overflow hidden

.Overlay
  &
    position fixed
    z-index $z-Overlay
    top 0
    left 0
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    padding 100px 50px
    width 100vw
    height 100vh
    overflow-y auto
    background-color rgba(#fff, .98)
    transition all .3s ease-in
  &:not(.is-open)
    opacity 0
    pointer-events none

  .close-btn
    &
      position fixed
      top 1rem
      right 1rem
      font-size 32px
      color $cl-light-grey
      opacity .8
      transition all .2s ease-in
    .fore
      fill $cl-tertiary-grey
      transition all .2s ease-in
    &:hover
      &
        color $cl-core
        opacity 1
        transition-delay .2s
      .fore
        fill #fff

  .content
    transition all .3s cubic-bezier(.18,.89,.32,1.28)

  &:not(.is-open) .content
    opacity 0
    transform translateY(-10%)
  &.is-open .content
    opacity 1
    transform none
    transition-delay .4s
